SKIP :
{
  " "
| "\r"
| "\t"
| "\n"
}

TOKEN:
{
	<#COMMENT_1: ("/**"(~["*","/"])*"*/") >
	|<#COMMENT_2: ("//"(~["\n"])*) >
	| < COMMENT: (< COMMENT_1 >|< COMMENT_2 >) >
}

TOKEN : /* OPERATORS */
{
	  <MULT_DIV: ("*"|"/"|"%") >
	| <ADD_MIN: ("+"|"-") >
	|<RELATIONAL_OP:("<"|">"| ">="|"<="| "=="| "!=")>
	| < ASSIGNMENT: "=" >
	| < RETURN: "->" >		//PREGUNTAR DUDA
}

TOKEN: //SEPARATORS
{
	<SEMICOLON: ";">
	|<COMA: ",">
	| < DOT:"." >
	| < POINTS: ":" >
	|<OPEN_PAR: "(">
	|<CLOSE_PAR: ")">
	| < OPEN_CURL: "{" >
	| < CLOSE_CURL: "}" >
	| < OPEN_BRACK: "[" >
	| < CLOSE_BRACK: "]" >
	}

TOKEN: //Palabaras reservadas
{
	< FUNCTION : "fn" >
	|< PRINT: "println!" >
	| < IF : "if" >
	| < ELSE: "else" >
	| < LOOP: "loop" >
	| <BREAK: "break" >
	| < MAIN: "main" >
