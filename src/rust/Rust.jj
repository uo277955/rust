	| < FOR: "for" >
	| < IN: "in" >
}


TOKEN: //NUMBER
{
  	<INT_NUMBER: (<DIGIT>)+>
	|<REAL_NUMBER: ((<DIGIT>)*(".")(<DIGIT>)+)>
}

TOKEN://POINTERS
{
	< DIRECTION_POINT: "&" >
}



TOKEN: //TIPOS
{
	< LET: "let" >
	|< MUT: "mut" >
	| < SIGNED: ("i8"|"i16"|"i32"|"i64"|"i128"|"isize") >
